#!/usr/bin/env node

// Use of this source code is governed by an Apache 2.0 license
// that can be found in the LICENSE file.

'use strict';

const program = require('commander');
const {Builder} = require('../src/builder');
const {BuilderConf} = require('../src/builder_conf');

program
  .version(require('../package.json').version)
  .usage('[options] <dir>')
  .option('-a, --action <action>', 'Action', /^(sync|build|package|upload|all)$/i, 'all')
  .option('-c, --conf <conf>', 'Configuration file', '.bot_config.json')
  .parse(process.argv);

try {
  let conf = new BuilderConf(program.args[0], program.conf);
  conf.init();

  let builder = new Builder(conf);
  builder.run(program.action);
} catch (e) {
  console.log(e);
  process.exit(1);
}
