#!/usr/bin/env node

// Use of this source code is governed by an Apache 2.0 license
// that can be found in the LICENSE file.

'use strict';

const path = require('path');
const program = require('commander');
const {Builder} = require('../src/builder');
const {BuilderConf} = require('../src/builder_conf');

//^7.0.0
program
  .version(require('../../package.json').version)
  .usage('[options]')
  .option('-a, --action <action>', 'Action', /^(sync|build|package|upload|all)$/i, 'all')
  .option('-c, --conf <config>', 'Configuration file', '../bot_config.json')
  .parse(process.argv);

try {
  const scriptPath = path.dirname(process.argv[1]);
  const rootDir = path.join(scriptPath, '..', '..');
  const configPath = path.join(scriptPath, program.conf)
  let conf = new BuilderConf(rootDir, configPath, program.backend);
  conf.init();

  let builder = new Builder(conf);
  builder.run(program.action);
} catch (e) {
  console.log(e);
  process.exit(1);
}
